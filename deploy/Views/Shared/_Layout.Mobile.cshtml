@using GastosAppMvc.Helpers
@using System.Web.Optimization
<!DOCTYPE html> 
<html> 
    <head> 
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title> 
        <meta name="viewport" content="width=device-width" />
        
        @*@Styles.Render("~/Content/themes/base/css")*@
        @Styles.Render("~/Content/mobilecss")
    </head> 
<body> 

    <div data-role="page" data-theme="a" id="myPage">
        @Html.Partial("_ViewSwitcher")

    

        <div data-role="header">
            @RenderSection("navbar_left", required: false)
            <h1>@ViewBag.Title</h1>
            @RenderSection("navbar_right", required: false)
        </div>
        <div data-role="content">
            @RenderSection("featured", false)
            @RenderBody()		
        </div>

    </div>
	<!--[if lt IE 9]>
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <![endif]-->
    <!--[if gte IE 9]><!-->
    <script src="http://code.jquery.com/jquery-2.1.0.min.js"></script>
    <!--<![endif]-->
	<script src="@Url.Content("~/Scripts/jquery-migrate-1.2.1.min.js")" type="text/javascript"></script>
	@Scripts.Render("~/bundles/jsutilsmobile")
	<script type="text/javascript">
		$(document).bind("mobileinit", function () {
			// As of Beta 2, jQuery Mobile's Ajax navigation does not work in all cases (e.g.,
			// when navigating from a mobile to a non-mobile page), hence disabling it.
			$.mobile.ajaxEnabled = false;
        });
        window.scrollTo(0, 1); //Best called from the onload event
	</script>
    @Scripts.Render("~/bundles/jquerymobile")
	@*<script src="@Url.Content("~/Scripts/jquery.mobile-1.3.0.js")" type="text/javascript"></script>*@

    @Scripts.Render("~/bundles/datepickermobile")
    @RenderSection("scripts", required: false)
</body>
</html>